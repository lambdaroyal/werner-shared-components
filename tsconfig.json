{
    "compilerOptions": {
        "strict": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "jsxImportSource": "solid-js"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}